{
  "manifest_version": 2,

  "name": "KV Time Tracker",
  "description": "Time Tracker connected with Jira",
  "version": "2.0",

  "background": {
    "scripts": ["background.js"]
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "unlimited_storage"
  ],
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "allPage.js" ]
    }
  ],

  "browser_action": {
    "default_title": "LostTime",
    "default_icon": "logo_57x57.png",
    "default_popup": "popup.html"
  }

}